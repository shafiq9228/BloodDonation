<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".FormActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Enter Your Details"/>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:textColorHint="#696969"
        app:hintTextColor="#696969"

        app:boxStrokeColor="#BB86FC"
        android:hint="Enter Blood Group">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/bloodet"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:textColorHint="#696969"
        app:hintTextColor="#696969"
        app:boxStrokeColor="#BB86FC"
        android:hint="Enter Mobile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:maxLength="10"
            android:id="@+id/mobileet"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:textColorHint="#696969"
        app:hintTextColor="#696969"
        app:boxStrokeColor="#BB86FC"
        android:hint="Enter Address">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textPostalAddress"
            android:textColor="#000000"
            android:id="@+id/addresset"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:textColorHint="#696969"
        app:hintTextColor="#696969"
        app:boxStrokeColor="#BB86FC"
        android:hint="Enter Age">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:maxLength="2"
            android:id="@+id/ageet"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="5"
            android:checked="true"
            android:buttonTint="#BB86FC"
            android:id="@+id/malecb"
            android:layout_height="wrap_content"
            android:text="Male"/>

        <CheckBox
            android:layout_width="0dp"
            android:layout_weight="5"
            android:id="@+id/femailcb"
            android:buttonTint="#BB86FC"
            android:layout_height="wrap_content"
            android:text="Femail"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitbtn"
        android:layout_marginTop="20dp"
        android:text="SUMBIT"
        android:textColor="@color/white"
        android:background="@drawable/redbtn"/>

</LinearLayout>