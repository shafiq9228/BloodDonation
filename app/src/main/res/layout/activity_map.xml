<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/maplayout"
            android:layout_height="match_parent">

            <fragment

                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>




        <ImageView
            android:layout_width="12dp"
            android:id="@+id/myred"
            android:src="@drawable/mycircle"
            android:layout_height="12dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/t1"
                android:textSize="12dp"
                android:layout_gravity="bottom"
                android:padding="12dp"
                android:textColor="@color/white"
                android:background="#008EFF"
                android:layout_height="wrap_content"/>


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:background="#08439A"
                android:id="@+id/savebtn"
                android:text="Save"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/formlayout"
            android:padding="20dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CC000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Add Your Location"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="Flat Number/Floor Number"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"

                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/flatnum"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:hint="Address 1"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"
                android:drawableTint="@color/black"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/address1"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:hint="Address 2"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"
                android:drawableTint="@color/black"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTint="@color/black"
                    android:id="@+id/address2"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:hint="Land Mark"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"

                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/landmark"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:hint="Pin Code"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"
                android:drawableTint="@color/black"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/pincode"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:hint="City"
                android:textColorHint="#4D000000"
                app:boxStrokeColor="#1669E5"

                >


                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/city"
                    android:baselineAligned="false"
                    android:textColor="#99000000" />

            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/statespin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"></Spinner>

            <LinearLayout

                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:id="@+id/mapsubmit"
                    android:text="submit"/>
            </LinearLayout>




        </LinearLayout>




    </FrameLayout>








</LinearLayout>

